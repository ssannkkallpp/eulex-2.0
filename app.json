{
  "expo": {
    "name": "EULEX",
    "slug": "eulex-reading-assistant",
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#3b82f6"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.eulex.readingassistant",
      "buildNumber": "1",
      "infoPlist": {
        "NSSpeechRecognitionUsageDescription": "This app uses speech recognition to help with reading assistance.",
        "NSMicrophoneUsageDescription": "This app uses the microphone for speech recognition features."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#3b82f6"
      },
      "package": "com.eulex.readingassistant",
      "versionCode": 1,
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router"
    ],
    "scheme": "eulex"
  }
}